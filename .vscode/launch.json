                "${workspaceFolder}/resources/cubes.bg2"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Mac build sample"
        },

        {
            "name": "bg2json (Mac)",
            "type": "lldb",
