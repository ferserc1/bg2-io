    "version": "0.2.0",
    "configurations": [
        {
            "name": "sample (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/sample",
            "args": ["${workspaceFolder}/resources/cubes.bg2"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Linux build sample",
            "miDebuggerPath": "/usr/bin/gdb",
            "includePath": [
                "${workspaceFolder}/src/bg2-io"
            ]
        },

        {
            "name": "bg2json (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/bg2json",
            "args": ["${workspaceFolder}/resources/cubes.bg2"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Linux build bg2json",
            "miDebuggerPath": "/usr/bin/gdb",
            "includePath": [
                "${workspaceFolder}/src/bg2-io"
            ]
        },

        {
            "name": "sample (Mac)",
            "type": "lldb",
